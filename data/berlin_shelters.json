  "safety_instructions": {
    "earthquake": {
      "during": [
        "DROP to your hands and knees",
        "Take COVER under a sturdy desk or table",
        "HOLD ON until shaking stops",
        "Stay away from windows, outside walls, and heavy objects",
        "If outdoors, move to an open area away from buildings"
      ],
      "after": [
        "Check yourself and others for injuries",
        "Evacuate if building is damaged",
        "Avoid using elevators",
        "Be prepared for aftershocks",
        "Check for gas leaks and electrical damage",
        "Listen to official announcements"
      ]
    },
    "flood": {
      "during": [
        "Move immediately to higher ground",
        "Do NOT walk through flowing water",
        "Do NOT drive through flooded areas",
        "Stay away from streams and drainage channels",
        "Turn off electricity at the main breaker if safe to do so"
      ],
      "after": [
        "Return home only when authorities say it's safe",
        "Clean and disinfect everything that got wet",
        "Avoid floodwater - it may be contaminated",
        "Document damage for insurance",
        "Watch for weakened structures"
      ]
    },
    "fire": {
      "during": [
        "Evacuate immediately if ordered",
        "Close all windows and doors",
        "Remove combustible materials from around your home",
        "If trapped, call 112 and stay low to the ground",
        "Cover your nose and mouth with wet cloth"
      ],
      "after": [
        "Return only when authorities allow",
        "Watch for hot spots and smoldering debris",
        "Avoid damaged power lines",
        "Document damage for insurance",
        "Check for structural damage before re-entering",
        "Ensure utilities (gas, electricity) are safe before use"
      ]
    }
  }
